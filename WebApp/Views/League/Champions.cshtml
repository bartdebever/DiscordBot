@model List<DataLibrary.Champion>

@{
    ViewBag.Title = "Champions";
}

<div class="container">
    <h2>Champions</h2>
    <p>Champions stored in system:</p>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>ChampionId</th>
            <th>Name</th>
            <th>Key</th>
            <th>Title</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ChampionId</td>
                <td>@item.name</td>
                <td>@item.key</td>
                <td>@item.title</td>
                <td>@Html.ActionLink("Edit", "EditChampion", new{id = item.Id}, new {@class = "btn btn-info"})</td>
            </tr>
        }
        </tbody>
    </table>
</div>
